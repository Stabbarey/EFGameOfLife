<Window x:Class="EFGameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EFGameOfLife"
        mc:Ignorable="d"
        Title="Game of Life" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Width" />
                <TextBox Name="WorldWidth" Text="9" />
                <TextBlock Text="Heigth" />
                <TextBox Name="WorldHeight" Text="9" />
                <Button Name="GameNew" Content="New game" Click="GameNew_Click"/>
                <Button Name="GameLoad" Content="Load game"/>
                <Button Name="GamePlay" Content="Play/Pause game"/>
                <Button Name="GameRecord" Content="Record game" Click="GameRecord_Click"/>
            </StackPanel>

            <Viewbox Grid.Column="0" Grid.Row="0" Stretch="UniformToFill">
                <Canvas Name="WorldGridCanvas" Width="100" Height="100" Background="Transparent" MouseDown="WorldGridCanvas_MouseDown" MouseUp="WorldGridCanvas_MouseUp" MouseMove="WorldGridCanvas_MouseMove" />
            </Viewbox>
            
        </StackPanel>

    </Grid>
</Window>
