<Window x:Class="EFGameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EFGameOfLife"
        mc:Ignorable="d"
        Title="Game of Life" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Width" />
                <TextBox Name="WorldWidth" Text="4" />
                <TextBlock Text="Heigth" />
                <TextBox Name="WorldHeight" Text="4" />
                <Button Name="GameNew" Content="New game" Click="GameNew_Click"/>
                <Button Name="GameLoad" Content="Load game" Click="GameLoad_Click"/>
                <Button Name="GamePlay" Content="Play/Pause game" Click="GamePlay_Click"/>
                <Button Name="GameRecord" Click="GameRecord_Click">
                </Button>
                <Slider Name="GameSpeed" Minimum="10" Maximum="2000" ValueChanged="GameSpeed_ValueChanged"  />
                <ListBox Name="ListBoxSavedGames" SelectionChanged="ListBoxSavedGames_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <!--<Image Width="32" Height="32" />-->
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Width}"/>
                                        <TextBlock Text="x"/>
                                        <TextBlock Text="{Binding Height}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <TextBox x:Name="textBox_saveDataName" Height="23" TextWrapping="Wrap" Text="Save Data Name" Width="120"/>
                <Button x:Name="RecordGame" Content="Record Game" Width="75" Click="GameRecord_Click"/>
            </StackPanel>

            <Viewbox Grid.Column="0" Grid.Row="0" Stretch="UniformToFill">
                <Canvas Name="WorldGridCanvas" Width="100" Height="100" Background="Transparent" MouseDown="WorldGridCanvas_MouseDown" MouseUp="WorldGridCanvas_MouseUp" MouseMove="WorldGridCanvas_MouseMove" />
            </Viewbox>

        </StackPanel>

    </Grid>
</Window>
